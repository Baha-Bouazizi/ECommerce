@model CommerceElectronique.Models.Product

<h2>Delete Product</h2>
<p>Are you sure you want to delete this product?</p>

<div>
    <strong>Name:</strong> @Model.Name
</div>
<div>
    <strong>Price:</strong> @Model.Price
</div>
<div>
    <strong>Description:</strong> @Model.Description
</div>
<div>
    <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 150px;" />
</div>

<form asp-action="DeleteProductConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.ProductId" />
    <button type="submit">Yes, Delete</button>
    <a asp-action="Index" asp-controller="Home">Cancel</a>
</form>
