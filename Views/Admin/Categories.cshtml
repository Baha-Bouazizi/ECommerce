@model IEnumerable<Category>

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Gestion des Catégories</h2>

    <table class="table table-hover shadow-sm bg-white rounded">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a href="@Url.Action("EditCategory", "Admin", new { id = category.CategoryId })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a href="@Url.Action("DeleteCategory", "Admin", new { id = category.CategoryId })" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr ?')">
                            <i class="fas fa-trash-alt"></i> Supprimer
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("CreateCategory", "Admin")" class="btn btn-success btn-lg">
            <i class="fas fa-plus-circle"></i> Ajouter une Catégorie
        </a>
    </div>
</div>

<!-- Inclure Bootstrap et FontAwesome pour le style -->
