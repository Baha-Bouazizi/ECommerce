<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 900px;
    }

    h2 {
        font-size: 1.8rem;
        font-weight: bold;
    }

    .table {
        margin-top: 20px;
    }

        .table th {
            font-size: 1rem;
            text-align: center;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
        }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.9rem;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
</style>
