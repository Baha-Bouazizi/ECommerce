@model CommerceElectronique.Models.Product

@{
    ViewData["Title"] = "Détails du Produit";
}

<h1>Détails du Produit</h1>

<div class="card">
    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="card-img-top" style="width: 300px; height: auto;" />
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Prix : </strong>@Model.Price.ToString("C")</p>
        <p class="card-text"><strong>Description : </strong>@Model.Description</p>
        <p class="card-text"><strong>Catégorie : </strong>@Model.Category.Name</p>
        <p class="card-text"><strong>Stock : </strong>@Model.Stock</p>
        <a href="@Url.Action("EditProduct", "Admin", new { id = Model.ProductId })" class="btn btn-warning">Modifier</a>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
