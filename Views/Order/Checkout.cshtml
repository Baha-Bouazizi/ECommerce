        }

    /* Champs du formulaire */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-size: 16px;
            color: #333;
            display: block;
            margin-bottom: 8px;
        }

    .input-field {
        width: 100%;
        padding: 12px;
