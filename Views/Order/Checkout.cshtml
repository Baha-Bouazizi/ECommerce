    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
    }

        .cart-table th, .cart-table td {
            padding: 12px;
            text-align: left;
            font-size: 16px;
            border-bottom: 1px solid #eee;
        }

        .cart-table th {
            background-color: #f8f9fa;
            color: #333;
        }

    /* Section Total */
    .total-section {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        font-size: 18px;
        font-weight: 600;
    }

    .total-price {
        color: #007bff;
    }

    /* Bouton de confirmation */
    .confirm-order-btn {
        width: 100%;
        padding: 15px;
        background-color: #007bff;
        color: white;
